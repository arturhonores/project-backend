<div class="container pt-5 mt-5 text-white">

  <div class="row justify-content-center">

    <div class="col-md-6">

      <h1>Editar {{username}}</h1>
      <hr />

      <form
        action="/perfil/editar-perfil/{{_id}}"
        method="POST"
        enctype="multipart/form-data"
      >

        <div class="mb-3 row">
          <div class="col">
            <label for="emailInput" class="form-label">Direcci√≥n de email</label>
            <input
              type="email"
              class="form-control"
              id="emailInput"
              name="email"
              value="{{email}}"
            />
          </div>

        </div>

        <div class="mb-3">
          <label for="usernameInput" class="form-label">Nombre de usuario</label>
          <input
            type="text"
            class="form-control"
            id="usernameInput"
            name="username"
            value="{{username}}"
          />
        </div>
        <div class="mb-3">
          <label for="avatar" class="form-label">Avatar</label>
          <input type="file" class="form-control" id="avatar" name="avatar" />
        </div>

        <div class="text-center">
          <button type="submit" class="btn btn-warning">Guardar</button>
        </div>

        {{#if errorMessage}}
          <div id="errorMessage">
            <p>{{errorMessage}}</p>
          </div>
        {{/if}}

      </form>
    </div>
  </div>

</div>