<div class="bg-dark vh-100 pt-5">
    <h1 class="text-white text-center pt-5">Buscador de series</h1>
    <hr>
    <div class="container pt-5">
        <form class="row gy-2 gx-3 align-items-center text-white" action="/series-filtradas" method="POST">
            <div class="col-12 d-flex justify-content-between">
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="genres" id="inlineRadioAction" value="28" />
        <label class="form-check-label" for="inlineRadioAction">Action</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="genres" id="inlineRadioAdventure" value="12" />
        <label class="form-check-label" for="inlineRadioAdventure">Adventure</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="genres" id="inlineRadioAdventure" value="16" />
        <label class="form-check-label" for="inlineRadioAdventure">Animation</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="genres" id="inlineRadioAdventure" value="35" />
        <label class="form-check-label" for="inlineRadioAdventure">Comedy</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="genres" id="inlineRadioAdventure" value="18" />
        <label class="form-check-label" for="inlineRadioAdventure">Drama</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="genres" id="inlineRadioAdventure" value="27" />
        <label class="form-check-label" for="inlineRadioAdventure">Horror</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="genres" id="inlineRadioAdventure" value="4" />
        <label class="form-check-label" for="inlineRadioAdventure">Musical</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="genres" id="inlineRadioAdventure" value="10749" />
        <label class="form-check-label" for="inlineRadioAdventure">Romance</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="genres" id="inlineRadioAdventure" value="53" />
        <label class="form-check-label" for="inlineRadioAdventure">Thriller</label>
      </div>
    </div>
    <div class="d-flex justify-content-between">
        {{!-- <div class="col-auto"> --}}
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="netflix" id="flexChecnetflix" name="services" />
        <label class="form-check-label" for="flexChecnetflix">
          <img src="/images/Netflix-logo.svg" alt="" width="90px">
        </label>
      </div>
    {{!-- </div> --}}
    {{!-- <div class="col-auto"> --}}
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="prime.subscription" id="flexCheckprime"
          name="services" />
        <label class="form-check-label" for="flexCheckprime">
          <img src="/images/primed-video-edit-01.svg" alt="" width="90px">
        </label>
      </div>
    {{!-- </div> --}}
    {{!-- <div class="col-auto"> --}}
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="disney" id="flexCheckdisney" name="services" />
        <label class="form-check-label" for="flexCheckdisney">
                    <img src="/images/disney-plus-logo.svg" alt="" width="90px">
        </label>
      </div>
    {{!-- </div> --}}
    {{!-- <div class="col-auto"> --}}
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="hbo" id="flexCheckhbo" name="services" />
        <label class="form-check-label" for="flexCheckhbo">
          <img src="/images/hbo-max-logo.svg" alt="" width="90px">
        </label>
      </div>
    {{!-- </div> --}}
    <div class="col-auto">
      <select class="form-select" aria-label="Release year" name="year_min">
        <option selected>Release year</option>
        <option value="2010">2010</option>
        <option value="2011">2011</option>
        <option value="2012">2012</option>
        <option value="2013">2013</option>
        <option value="2014">2014</option>
        <option value="2015">2015</option>
        <option value="2016">2016</option>
        <option value="2017">2017</option>
        <option value="2018">2018</option>
        <option value="2019">2019</option>
        <option value="2020">2020</option>
        <option value="2021">2021</option>
        <option value="2022">2022</option>
        <option value="2023">2023</option>
      </select>
    </div>
    <div class="col-auto">
      <select class="form-select" aria-label="release year" name="year_max">
        <option selected>Release year</option>
        <option value="2010">2010</option>
        <option value="2011">2011</option>
        <option value="2012">2012</option>
        <option value="2013">2013</option>
        <option value="2014">2014</option>
        <option value="2015">2015</option>
        <option value="2016">2016</option>
        <option value="2017">2017</option>
        <option value="2018">2018</option>
        <option value="2019">2019</option>
        <option value="2020">2020</option>
        <option value="2021">2021</option>
        <option value="2022">2022</option>
        <option value="2023" selected>2023</option>
      </select>
    </div>
      <button type="submit" class="btn btn-warning">Search</button>
    </div>
        </form>
        <div class="container pt-2 h-auto">

            <div class="row row-cols-1 row-cols-md-3 row-cols-lg-5 g-4">
                {{#each show.result}}
                <div class="col">
                    <div class="card">
                        <img src="https://image.tmdb.org/t/p/original{{posterPath}}" class="card-img-top" alt="..." />
                        <div class="card-body text-center">
                            <h5 class="card-title">{{title}}</h5>
                            <p>IMDB Rating :{{imdbRating}}</p>
                            <p>Release year: {{firstAirYear}} </p>
                            {{#each streamingData}}
                            <p>{{@key}}</p>
                            {{!-- <a href="{{this.url}}" class="btn btn-warning" target="_blank">
                                Watch on
                                {{@key}} --}}
                            </a>
                            {{/each}}
                            <a href="/series/detalles/{{imdbId}}" class="btn btn-warning">Ver detalles</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            <div class="row">
                <div class="col text-center p-4">
                    <form action="/series-filtradas" method="POST" class="d-inline">
                        <input type="hidden" name="cursor" value="{{previousCursor}}" />
                        <input type="hidden" name="services" value="{{services}}" />
                        <input type="hidden" name="genres" value="{{genres}}" />
                        <input type="hidden" name="year_min" value="{{firstAirYear}}" />
                        <button type="submit" class="btn btn-warning text-white">Previous</button>
                    </form>
                    <form action="/series-filtradas" method="POST" class="d-inline">
                        <input type="hidden" name="cursor" value="{{nextCursor}}" />
                        <input type="hidden" name="services" value="{{services}}" />
                        <input type="hidden" name="genres" value="{{genres}}" />
                        <input type="hidden" name="year_min" value="{{firstAirYear}}" />
                        <button type="submit" class="btn btn-warning text-white">Next</button>
                    </form>

                </div>
            </div>
        </div>


        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-5 g-4">
            {{#each show.result}}
            <div class="col">
                <div class="card">
                    <img src="https://image.tmdb.org/t/p/original{{posterPath}}" class="card-img-top" alt="..." />
                    <div class="card-body text-center">
                        <h5 class="card-title">{{title}}</h5>
                        <p>IMDB Rating :{{imdbRating}}</p>
                        <p>Release year: {{firstAirYear}} </p>
                        {{#each streamingData}}
                        <p>{{@key}}</p>

                        {{!-- <a href="{{this.url}}" class="btn btn-warning" target="_blank">
                            Watch on
                            {{@key}}
                        </a> --}}
                        {{/each}}
                        <a href="/series/detalles/{{imdbId}}" class="btn btn-warning">Ver detalles</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>





    </div>
</div>